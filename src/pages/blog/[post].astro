---
import DefaultLayout from '@layouts/DefaultLayout.astro'
import PageHeader from '@components/PageHeader.astro'
import SocialShares from '@components/SocialShares.astro'
import { Heading } from 'accessible-astro-components'
import { getCollection, render } from 'astro:content'
import type { CollectionEntry } from 'astro:content'
import { slugify } from '@/utils/slugify'

export async function getStaticPaths() {
  const posts = await getCollection('blog')

  const postImages = [
    { src: '/posts/post-image-1.png' },
    { src: '/posts/post-image-2.png' },
    { src: '/posts/post-image-3.png' },
    { src: '/posts/post-image-4.png' },
    { src: '/posts/post-image-5.png' },
    { src: '/posts/post-image-6.png' },
  ]

  return posts.map((post, index) => {
    const postWithImage = {
      ...post,
      featuredImage: postImages[index % postImages.length].src,
      slug: slugify(post.data.title),
    }

    return {
      params: { post: postWithImage.slug },
      props: { post: postWithImage },
    }
  })
}

interface Props {
  post: CollectionEntry<'blog'> & { featuredImage: string; slug: string }
}

const { post } = Astro.props
const { Content } = await render(post)

const author = {
  name: post.data.author,
  image: '/posts/post-image-1.png',
  bio: 'Accessibility advocate',
}
---

<DefaultLayout title={post.data.title} description={post.data.description} url={`/blog/${post.slug}`}>
  <PageHeader
    title={post.data.title}
    subtitle={post.data.description}
    author={author}
    bgType="bordered"
    featuredImage={post.featuredImage}
  />
  <section class="my-12">
    <div class="narrow space-content container">
      <Content />
    </div>
  </section>
  <section class="my-12">
    <div class="narrow space-content container">
      <Heading level="h2">Share this post</Heading>
      <p>Like this post? Share it with your friends!</p>
      <SocialShares />
    </div>
  </section>
</DefaultLayout>
